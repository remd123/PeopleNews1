<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.peoplenews.fragment.Menu_reposos">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView6"
        android:layout_width="415dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text=""
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"/>

    <com.google.android.material.chip.ChipGroup
        android:layout_width="286dp"
        android:layout_height="437dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_redondeado"
            android:text="Seleccione el tipo de Reposo"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textColorHighlight="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_maternidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POR MATERNIDAD"
            android:textAlignment="center"
            android:background="@drawable/boton_redondeado"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnPaternidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POR PATERNIDAD"
            android:textAlignment="center"
            android:background="@drawable/boton_redondeado"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnPOperatorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POST OPERATORIO"
            android:textAlignment="center"
            android:background="@drawable/boton_redondeado"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnEnfermedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POR ENFERMEDAD"
            android:textAlignment="center"
            android:background="@drawable/boton_redondeado"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnAccidente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POR ACCIDENTE"
            android:textAlignment="center"
            android:background="@drawable/boton_redondeado"
            android:textSize="18sp" />
    </com.google.android.material.chip.ChipGroup>
</androidx.constraintlayout.widget.ConstraintLayout>